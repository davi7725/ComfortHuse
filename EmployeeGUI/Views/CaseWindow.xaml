<Window x:Class="EmployeeGUI.CaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeGUI"
        mc:Ignorable="d"
        Title="Case" MinHeight="640" MinWidth="800" Height="350" Width="551.736">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Case number:" HorizontalAlignment="Left" Margin="95,41,0,0" VerticalAlignment="Top" Height="29" Width="169" FontFamily="Lato Black" Grid.Column="1"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="185" Source="..\Resources\Graphics\Logo.png" Margin="10,30,0,0" Grid.Column="1"/>
        <TabControl HorizontalAlignment="Left" Height="512" Margin="0,87,0,0" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="2">
            <TabItem Header="Customer ">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-11">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="104*"/>
                        <RowDefinition Height="137*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="label_customerinformation" Content="Customer information" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" FontSize="24" FontFamily="Lat'"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="141,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="141,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
                    <Label Content="Name: &#xD;&#xA;" HorizontalAlignment="Left" Margin="89,124,0,0" VerticalAlignment="Top"/>
                    <Label Content="Adresse&#xA;" HorizontalAlignment="Left" Margin="89,151,0,0" VerticalAlignment="Top"/>
                    <Label Content="Adresse&#xA;" HorizontalAlignment="Left" Margin="89,0,0,0" VerticalAlignment="Top" Grid.Row="1"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="141,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="141,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="142,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" Grid.Row="1"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="270,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Grid.Row="1" RenderTransformOrigin="0.5,0.5"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="141,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="335" Grid.Row="1" RenderTransformOrigin="0.5,0.5"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="142,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="335" Grid.Row="1" RenderTransformOrigin="0.5,0.5"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="141,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Row="1" RenderTransformOrigin="0.5,0.5"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="141,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Row="1" RenderTransformOrigin="0.5,0.5"/>
                    <Label Content="Tilbudsnr:&#xA;" HorizontalAlignment="Left" Margin="74,92,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Material Selection" Height="22" VerticalAlignment="Bottom" Margin="-2,-2,-2,2">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Windows and doors" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Materials(inside)" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Interiors" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Floors" HorizontalAlignment="Left" Margin="10,237,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Power" HorizontalAlignment="Left" Margin="10,258,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Home appliances" HorizontalAlignment="Left" Margin="10,278,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Carpenter" HorizontalAlignment="Left" Margin="10,298,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Builder" HorizontalAlignment="Left" Margin="10,318,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Painter" HorizontalAlignment="Left" Margin="10,338,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Material(outside)" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Plot" HorizontalAlignment="Left" Margin="10,137,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="House type" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Garage/carport" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="VVS" HorizontalAlignment="Left" Margin="10,358,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Ventilation" HorizontalAlignment="Left" Margin="10,378,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Extra construction" HorizontalAlignment="Left" Margin="10,398,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Other" HorizontalAlignment="Left" Margin="10,418,0,0" VerticalAlignment="Top" Width="182"/>
                    <Button Content="Statement" HorizontalAlignment="Left" Margin="10,438,0,0" VerticalAlignment="Top" Width="182"/>
                    <ListBox HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" Height="416" Margin="205,42,0,0" VerticalAlignment="Top" Width="550" Name="ListBoxProductCatergories" FontFamily="Lato">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Background" Value="#000" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Margin="0" Padding="0" Text="{Binding Title}" Foreground="White"></TextBlock>
                                    <TextBlock Margin="0" Padding="0" Grid.Column="1" Text="{Binding Price}" Foreground="White"></TextBlock>


                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
        <Menu Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="792" FontFamily="Lato" BorderBrush="White">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF272727" Offset="0.163"/>
                    <GradientStop Color="#FF595959" Offset="0.77"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Background="{x:Null}" Foreground="White" FontSize="16" Header="File">

                <MenuItem Foreground="Black" Header="Export"></MenuItem>
                <Separator></Separator>
                <MenuItem Foreground="Black" Header="Print"></MenuItem>
            </MenuItem>
            <Separator Width="10"></Separator>
            <MenuItem Background="{x:Null}" Foreground="White" FontSize="16" Header="View">
                <MenuItem.Effect>
                    <DropShadowEffect BlurRadius="3" Direction="336"/>
                </MenuItem.Effect>
            </MenuItem>
            <MenuItem/>
            <Label  Content="NameOfUser" Foreground="White" Margin="0" HorizontalContentAlignment="Right" Width="661"/>
        </Menu>


    </Grid>
</Window>
